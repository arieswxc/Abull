<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Bank Card</h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
    <% if @bank_card %>
      <dt><%= t('card number') %></dt>
      <dd><%= @bank_card.number %></dd>

      <dt><%= t('real name') %></dt>
      <dd><%= @bank_card.user.real_name %></dd>

      <dt><%= t('bank name') %></dt>
      <dd><%= @bank_card.bank_name %></dd>

      <dt><%= t('bank branch') %></dt>
      <dd><%= @bank_card.bank_branch %></dd>

      <dt><%= t('state') %></dt>
      <dd><%= @bank_card.state %></dd>

      <p><%= link_to 'edit', edit_user_bank_card_path(user_id: @bank_card.user) %></p>
    <% else %>
      <% @bank_card = current_user.build_bank_card %>
      <%= simple_form_for(@bank_card, url: user_bank_card_path) do |f| %>
        <%= f.input :number %>
        <%= f.input :bank_name %>
        <%= f.input :bank_branch %>
        <%= f.button :submit %>
      <% end %>
    <% end %>
    </dl>
  </div>
</div>