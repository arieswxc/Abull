.box.box-user-info
  .user-avatar-container.inline-block
    %a{:href => "/account/info!basicInfo.action"}
      = image_tag current_user.avatar.url,class: "img-thumbnail img-rounded w96",alt: "选取头像"
  .user-info-container
    %h3{:title => "zjs18"} zjs18
    .fn-clear.relative
      #info-box.fn-left.user-security-container.mr10
        .safe.fn-clear
          %span.fn-left.color-gray-text 安全等级
          #safe-progressbar.safe-progressbar.fn-left{:title => "25%"}
            .bar{:style => "width: 25px;"}
        .icons.fn-clear.mt5
          .row
            .col-md-12
              %a.btn-u.btn-u-xs{:class => "#{'btn-u-default direct_to_tab2' if current_user.cell.blank?}" "#{'btn-u-yellow' if !current_user.cell.blank?}",
                :href => "#{edit_user_registration_path+'/#authencation' if current_user.cell.blank?}"} 手机
              %a.btn-u.btn-u-xs{:class => "#{'btn-u-default direct_to_tab2' if current_user.email.blank?}" "#{'btn-u-yellow' if !current_user.email.blank?}",
                :href => "#{edit_user_registration_path+'/#authencation' if current_user.email.blank?}"} 邮箱
              - @authenticated = !(current_user.level == 'unverified' || current_user.level == 'investor_applied')
              %a.btn-u.btn-u-xs{:class => "#{'btn-u-default direct_to_tab2' if !@authenticated}" "#{'btn-u-yellow' if @authenticated}",
                :href => "#{edit_user_registration_path+'/#authencation' if !@authenticated}"} 身份证
          .row.mt5
            .col-md-12
              %a.btn-u.btn-u-xs{:class => "#{'btn-u-default direct_to_tab2' if current_user.address.blank?}" "#{'btn-u-yellow' if !current_user.address.blank?}",
                :href => "#{edit_user_registration_path+'/#authencation' if current_user.address.blank?}"} 住址
              %a.btn-u.btn-u-xs{:class => "#{'btn-u-default direct_to_tab2' if current_user.education.blank?}" "#{'btn-u-yellow' if !current_user.education.blank?}",
                :href => "#{edit_user_registration_path+'/#authencation' if current_user.education.blank?}"} 学历
      .fn-left.last.border-left.pl10
        .surplus.fn-clear
          %span.fn-left.text-l.mr10 账户余额
          %span.fn-left.num-xl.color-orange-text
            %em> 0.00
            元
          %a.fn-left.ui-button.ui-button-blue.ui-button-mid.mr4{:href => "/account/capital!recharge.action"} 充值
          %a.fn-left.ui-button.ui-button-red.ui-button-mid.last{:href => "/account/capital!withdraw.action"} 提现
        .surplus-detail.fn-clear
          .fn-left.mr40
            %span.fn-left.text.mr10 冻结金额
            %span.fn-left.num.last
              %em> 0.00
              元
          .fn-left.last
            %span.fn-left.text.mr10 可用金额
            %span.fn-left.num.last
              %em> 0.00
              元
%hr
