.pg-container-content
  #pg-account-index.pg-account
    .container_12.mt10.fn-clear
      = render "shares/profile_side_navbar", {activeItem: "account"}
      .inline-block.relative.pg-account-detail
        = render "shares/profile"
        .tab-v2
          %ul.nav.nav-tabs
            %li.active
              %a{"data-toggle" => "tab", :href => "#billings"} 充值记录
            %li
              %a{"data-toggle" => "tab", :href => "#cashin"} 充值
            %li
              %a{"data-toggle" => "tab", :href => "#cashout"} 提现
            %li
              %a{"data-toggle" => "tab", :href => "#bankcard"} 我的银行卡
          .tab-content
            #billings.tab-pane.fade.active.in
              %table.table.table-bordered
                %thead
                  %th 时间
                  %th 订单号
                  %th User name
                  %th 充值方式
                  %th 金额
                  %th Billable Type
                  %th Billable id
                %tbody
                  = render @billings
            #cashin.tab-pane.fade
              .tab-v2
                %ul.nav.nav-tabs
                  %li.active
                    %a{"data-toggle" => "tab", :href => "#bankcharge"} 网银充值
                  %li
                    %a{"data-toggle" => "tab", :href => "#zfbcharge"} 支付宝转账
                  %li
                    %a{"data-toggle" => "tab", :href => "#banktrans"} 支付宝转账
                .tab-content
                  #bankcharge.tab-pane.fade.active.in
                    = render "profile/cash_management/bankcharge"
                  #zfbcharge.tab-pane.fade
                    = render "profile/cash_management/zfbcharge"
                  #banktrans.tab-pane.fade
                    = render "profile/cash_management/bank_trans"
            #cashout.tab-pane.fade
              = render "profile/cash_management/cashout"
            #bankcard.tab-pane.fade
              = render "profile/cash_management/bankcard"
