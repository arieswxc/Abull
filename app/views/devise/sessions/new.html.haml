=# TODO 登录缺少错误提示
.container.content
  .row
    .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'reg-page'}) do |f|
        .reg-header
          %h2 登录
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-user
          = f.email_field :email, autofocus: true, placeholder: "Username", class: "form-control"
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"
        .row
          .col-md-6.checkbox
            - if devise_mapping.rememberable?
              %label
                %input{:type => "checkbox"}>/
                记住我
          .col-md-6
            %button.btn-u.pull-right{:type => "submit"} 登录
        %hr/
        %h4 Forget your Password ?
        %p
          no worries,
          %a.color-green{:href => "#"} click here
          to reset your password.
  / /row
= render "devise/shared/links"
