.container.content
  .row
    .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
      = form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'reg-page'}) do |f|
        .reg-header
          %h2 登录
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-user
          = f.email_field :email, autofocus: true, placeholder: "用户名", class: "form-control"
        .input-group.margin-bottom-20
          %span.input-group-addon
            %i.fa.fa-lock
          = f.password_field :password, autocomplete: "off", placeholder: "密码", class: "form-control"
        .row
          .col-md-6.checkbox
            - if devise_mapping.rememberable?
              %label
                %input{:type => "checkbox"}>/
                记住我
          .col-md-6
            %button.btn-u.pull-right{:type => "submit"} 登录
        %hr/
        %h4 忘记密码 ?
        %p
          %a.color-green{:href => "#"} 点击这里
          重置密码
