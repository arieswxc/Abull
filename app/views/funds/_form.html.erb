<!--https://github.com/plataformatec/simple_form-->
<%= simple_form_for @fund do |f| %>
  <%= f.input :private_check, collection: [:private, :public] %>
  <%= f.label :name %>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
  <%= f.input :amount %>
  <%= f.input :collection_deadline %>
  <%= f.input :earning, as: :hidden %>
  <%= f.input :earning_rate, as: :hidden %>
  <%= f.input :minimum %>
  <%= f.input :invest_starting_date %>
  <%= f.input :invest_ending_date %>
  <%= f.input :expected_earning_rate %>
  <%= f.input :description %>
  <%= f.input :frontend_risk_method %>
  <%= f.label :backend_risk_method %>
  <%= f.input :initial_amount, as: :hidden %>
  <%= f.submit %>
<% end %>