.container.content
  .row
    .col-md-12
      %label.mr15
        %span HOMS账号：
        %span= @fund.homs_account.title if @fund.homs_account && (@fund.homs_account.title != "undefined")
      %label.mr15
        %span 密码：
        %span
      %label
        %span 暗标码：
        %span= @fund.private_code
  .row
    .col-md-12
      = render 'funds/fund_base_info', {invests_amount: @total_invest_value}
  .row
    .col-md-12
      .panel.panel-grey
        .panel-heading
          .panel-title
            %label.mr40
              投资记录
            .float-right
              %label.mr15
                %span 人次：
                %span= @invests.count
              %label
                %span 投标总额：
                %span
                  = @invests.sum(:amount)
                  元
        .panel-title
          = render "invests/invest_list"

