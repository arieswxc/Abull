= simple_form_for(@billing, url: third_charged_user_account_path) do |f|
  .headline.headline-md
    %h4.zdy-red 贝付支付
  .form-group
    %label 充值金额：
    .input-group.w200
      %input.form-control.text-center.numberic{:name => "billing[amount]",:maxlength => 7}
      %span.input-group-addon  元
  %button.btn-u.btn-u-default.third-charge-btn{:name => "commit", :type => "submit"} 提交


#chargeConfirm.modal.fade.bs-example-modal-sm{:tabindex => "-1", :role => "dialog", 'aria-labelledby' => "myModalLabel", 'aria-hidden' => "true"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{'aria-hidden' => "true", 'data-dismiss' => "modal", :type => "button"} x
        #myModalLabel.modal-title 充值确认
      .modal-body
        %label 充值已完成？
      .modal-footer
        %button.btn-u.btn-u-default{'data-dismiss' => "modal",:type => "button"} 取消
        %button.btn-u.btn-u-blue{'data-dismiss' => "modal",:type => "button"} 确定

:javascript
  $(function(){
    $(".third-charge-btn").click(function(e){
      var postData = new FormData();
      var m = $("input[name='billing[amount]']").val();
      if (m < 1){
        alert("充值必须大于等于1元");
        return;
      }
      postData.append('billing[amount]', m);
      $.ajax({
        data: postData,
        url: "/users/#{current_user.id}/account/third_charged",
        type: 'post',
        contentType: false,
        processData: false,
        success: function(data){
          window.open(data.url,"_blank");
          $("#chargeConfirm").modal();
        },
        error: function(){
          // window.open("","_blank");
          // confirm("充值已完成？");
          alert("系统繁忙，请稍后再试");
        }
      });
      e.preventDefault();
    });
  });
