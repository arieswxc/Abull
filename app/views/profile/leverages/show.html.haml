.container.content
  .row
    .col-md-12
      .panel.panel-grey
        .panel-heading
          .panel-title 配资管理
        .panel-title
          %table.table.table-striped.table-bordered
            %tbody
              %tr
                %td 订单号
                %td  xxxxxx
              %tr
                %td= Leverage.human_attribute_name('amount')
                %td
                  = @leverage.amount
                  元
              %tr
                %td= Interest.human_attribute_name('leverage_time')
                %td
                  = @leverage.leverage_amount
                  元
              %tr
                %td= Leverage.human_attribute_name('created_at')
                %td.formattime= @leverage.created_at
              %tr
                %td= Leverage.human_attribute_name('date')
                %td{:class => "#{'formattime' unless @leverage.date.blank? }"}= @leverage.date
              %tr
                %td= Leverage.human_attribute_name('deadline')
                %td{:class => "#{'formattime' unless @leverage.deadline.blank? }"}= @leverage.deadline
              %tr
                %td 亏损警告线
                %td= @leverage.loss_warning_line
              %tr
                %td 亏损平仓线
                %td= @leverage.loss_making_line
              %tr
                %td 借款利息
                %td= @leverage.rate
              %tr
                %td 借款月利率
                %td= @leverage.total_interests
              %tr
                %td 追加保证金
                %td= @leverage.deposit
              %tr
                %td= Leverage.human_attribute_name('state')
                %td= @leverage.state
  .text-center
    %button.btn-u.btn-u-red.add-bond{'data-toggle' => "modal",'data-target' => "#addBond",:type => "button"} 追加保证金
    %button.btn-u.btn-u-red.pre-get{'data-toggle' => "modal",'data-target' => "#preGet",:type => "button"} 盈利提出
    %button.btn-u.btn-u-red.pre-wind-up 提前清盘

    #addBond.modal.fade{:tabindex => "-1", :role => "dialog", 'aria-labelledby' => "myModalLabel", 'aria-hidden' => "true"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{'aria-hidden' => "true", 'data-dismiss' => "modal", :type => "button"} x
            #myModalLabel.modal-title 追加保证金
          .modal-body
            %label 请您输入追加保证金的数额
            .input-group
              %input.numberic.text-center{:maxlength => 7}
              %span.input-group-addon  元
          .modal-footer
            %button.btn-u.btn-u-default{'data-dismiss' => "modal",:type => "button"} 取消
            %button.btn-u.btn-u-blue{:type => "button"} 确定
    #preGet.modal.fade{:tabindex => "-1", :role => "dialog", 'aria-labelledby' => "myModalLabel", 'aria-hidden' => "true"}
      .modal-dialog
        .modal-content
          .modal-header
            %button.close{'aria-hidden' => "true", 'data-dismiss' => "modal", :type => "button"} x
            #myModalLabel.modal-title 盈利提出
          .modal-body
            %label 请您输入盈利提出的数额
            .input-group
              %input.numberic.text-center{:maxlength => 7}
              %span.input-group-addon  元
          .modal-footer
            %button.btn-u.btn-u-default{'data-dismiss' => "modal",:type => "button"} 取消
            %button.btn-u.btn-u-blue{:type => "button"} 确定

