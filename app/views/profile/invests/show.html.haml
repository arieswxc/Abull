.container.content
  - if !@flag
    .p20.text-center
      %label 暗号:
      %input
      %a.btn-u.btn-u-orange.btn-u-xs.unlock_btn UNLOCK
  .row.mt10
    = render 'users/funder_info',{user: @fund.user}
  .row
    .col-md-12
      = render 'funds/fund_base_info'
  .tag-box.tag-box-v3.mt20.p20.pt0
    .row
      .col-md-4
        .headline.headline-md.relative
          %h4 当前标的业绩
        .text-center
          #fund_history_chart.chart_box
      .col-md-4
        .headline.headline-md
          %h4 当前标的数据
          = link_to "更多","#",class: "float-right"
        .mt10
          - if @fund_list_array
            %table.table.table-striped
              %thead
                %tr
                  %th 日期
                  %th 净值
              %tbody
                - @fund_list_array.each do |f|
                  %tr
                    %td
                      = f[0]
                    %td
                      = f[1]
          - else
            %h2.text-center.p20 还没有历史数据
      .col-md-4
        .headline.headline-md
          %h4 证明图片
        .mt10
          - if @fund_verify_photos && !@fund_verify_photos.empty?
            .owl-carousel-v1.owl-carousel-style-v1
              .owl-navigation
                .customNavigation
                  %a.owl-btn.prev-v1
                    %i.fa.fa-angle-left
                  %a.owl-btn.next-v1
                    %i.fa.fa-angle-right
              .owl-slider
                - @fund_verify_photos.each do |f|
                  - if f.photo && f.photo.url
                    .item
                      %a.fancybox-button.zoomer{:href => f.photo.url, 'data-rel' => "fancybox-button"}
                        %span.overlay-zoom
                          = image_tag f.photo.url.split("?")[0] + '?imageView2/1/w/335/h/168/interlace/1',class: "img-responsive"
                          %span.zoom-icon

          - else
            %h2.text-center.p20 还没有证明图片
  .row
    .col-md-12
      .panel.panel-grey
        .panel-heading
          .panel-title
            %label.mr40
              申购记录
            %label.mr15
              %span 人次：
              %span= @invests.count
            %label
              %span 投标总额：
              %span
                = @invests.sum(:amount)
                元
        .panel-title
          = render "invests/invest_list"

