.pg-container-content
  #pg-account-index.pg-account
    .container_12.mt10.fn-clear
      = render "shares/profile_side_navbar", {activeItem: "invest"}
      .inline-block.relative.pg-account-detail
        = render "shares/profile"
        .tag-box.tag-box-v3.mt20.p20
          %h3
            A股平衡基金
            = link_to user_invests_path(current_user),class: "ml10" do
              %span.icon-action-undo
          .progress
            .progress-bar.progress-bar-info.progress-bar-striped{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "70", :role => "progressbar", :style => "width: 70%"}
              70%
          .tab-v1
            %ul.nav.nav-tabs
              %li.active
                %a{"data-toggle" => "tab", :href => "#fund-home-1"} 基金首页
              %li
                %a{"data-toggle" => "tab", :href => "#fund-comment-1"} 相关评论
            .tab-content.row
              #fund-home-1.tab-pane.fade.active.in
                .col-md-2.col-sm-2.text-center
                  .red 5389
                  %span.counter 投标人数
                .col-md-9.col-sm-9
                  %h4 募集总额：1000w
                  %span 到期时间：2022-11-11
                  .mt20
                    %div 操盘账号: x200x
                    %div 操盘密码: xxxxxxxxxx
                    %a.btn-u.btn-u-blue.mt10{:href => "javascript:;"} 操盘入口
              #fund-comment-1.tab-pane.fade
